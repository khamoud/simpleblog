<% if flash[:success] %>
	<p><%= flash[:success]%></p>
<%elsif flash[:failure]%>
	<% flash[:failure].each do |message| %>
		<p><%= message %></p>
	<%end%>
<%end%>

<form action="/users" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input type="text" name="user[first_name]" placeholder="First Name" />
  <input type="text" name="user[last_name]" placeholder="Last Name" />
  <input type="text" name="user[email_address]" placeholder="Email Address" />
  <input type="password" name="user[password]" placeholder="Password" />
  <input type="submit" value="Register" />
</form>